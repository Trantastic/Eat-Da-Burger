<h1 class="text-center">Eat-Da-Burger</h>

<div class="row">
	<div class="col-md-6 mt-5">
		{{!-- list of burgers --}}
		<ul style="list-style: none;">
			{{#each burgers}}
				{{#unless devoured}}
					<li>{{id}} {{burger_name}}</li>
						<button data-id="{{id}}" data-newdevour="{{devoured}}" class="btn btn-dark change-devour">Devour</button>
					<br>
				{{/unless}}
			{{/each}}
		</ul>
	</div>

	<div class="col-md-6 mt-5">
		{{!-- list of devoured burgers --}}
		<ul style="list-style: none;">
			{{#each burgers}}
				{{#if devoured}}
					<li>{{id}} {{burger_name}}</li><br>
				{{/if}}
			{{/each}}
		</ul>
	</div>

{{!-- Add a burger --}}
	<div class="col-md-6 mx-auto mt-5">
		<form class="create-burger">
		  <div class="form-group">
		    <label class="burger-entry" for="add-burger">Enter a burger you want to devour!</label>
		    <textarea class="form-control" id="add-burger" rows="3"></textarea>
		  </div>
		  <button type="submit" class="btn btn-primary pl-3 pr-3">Submit</button>
		</form>
	</div>
</div>
